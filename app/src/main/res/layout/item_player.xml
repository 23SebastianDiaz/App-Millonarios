<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvPlayer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="22dp"
    android:layout_marginVertical="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/Background_App">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPlayer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@android:color/black"
            android:scaleType="centerCrop"
            android:padding="0dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="italic|bold"
                tools:text="Sebastian Diaz"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvPlayerNationality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Colombia"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvPlayerAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="22 year"
                android:textColor="@color/white"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvPlayerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="MC"
            android:textColor="@color/white"
            android:padding="12dp"/>

        <TextView
            android:id="@+id/tvPlayerDorsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="04"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="26dp"
            android:layout_gravity="end|top"
            android:textColor="@color/white"
            android:padding="12dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end|bottom"
            android:src="@mipmap/ic_millos_foreground"
            android:scaleType="centerCrop"/>
    </FrameLayout>


</androidx.cardview.widget.CardView>